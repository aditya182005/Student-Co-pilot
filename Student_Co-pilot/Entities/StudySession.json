{
  "name": "StudySession",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "format": "date"
    },
    "subject": {
      "type": "string"
    },
    "duration_minutes": {
      "type": "number",
      "minimum": 1
    },
    "session_type": {
      "type": "string",
      "enum": [
        "study",
        "quiz",
        "review",
        "practice",
        "research"
      ],
      "default": "study"
    },
    "focus_rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 10
    },
    "notes": {
      "type": "string"
    },
    "pomodoro_completed": {
      "type": "number",
      "default": 0
    },
    "breaks_taken": {
      "type": "number",
      "default": 0
    }
  },
  "required": [
    "date",
    "duration_minutes"
  ],
  "rls": {
    "read": {
      "created_by": "{{user.email}}"
    },
    "write": {
      "created_by": "{{user.email}}"
    }
  }
}